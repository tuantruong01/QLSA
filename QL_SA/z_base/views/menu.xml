<odoo>
    <data>
        <record model="ir.ui.view" id="tigo_menu_tree">
            <field name="name">Thực đơn</field>
            <field name="model">tigo.menu</field>
            <field name="arch" type="xml">
                <tree string="Thực đơn">
                    <field name="code_menu"/>
                    <field name="name"/>
                    <field name="type_menu"/>
                    <field name="dish_ids" widget="many2many_tags"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="menu_form">
            <field name="name">Thực đơn</field>
            <field name="model">tigo.menu</field>
            <field name="arch" type="xml">
                <form string="Thực đơn">
                    <sheet>
                        <group>
                            <group>
                                <field name="code_menu"/>
                                <field name="name"/>
                            </group>
                            <group>
                                <field name="type_menu"/>
                                <field name="dish_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="menu_view" model="ir.actions.act_window">
            <field name="name">Thực đơn</field>
            <field name="res_model">tigo.menu</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
        <menuitem name="Thực Đơn"
                  id="menu_tigo_menu"
                  parent="z_base.root_data_menu"
                  action="menu_view"
                  sequence="1"/>
    </data>
</odoo>
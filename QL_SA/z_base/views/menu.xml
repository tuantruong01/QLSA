<odoo>
    <data>
        <record model="ir.ui.view" id="tigo_menu_tree">
            <field name="name">Thực đơn</field>
            <field name="model">tigo.menu</field>
            <field name="arch" type="xml">
                <tree string="Thực đơn">
                    <field name="id"/>
                    <field name="name"/>
                    <field name="type_menu"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="menu_form">
            <field name="name">Thực đơn</field>
            <field name="model">tigo.menu</field>
            <field name="arch" type="xml">
                <form string="Thực đơn">
                    <head>
                        <field name="state" widget="statusbar"/>
                    </head>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="type_menu"/>
                                <field name="dish_ids" widget="many2many_tags"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="menu_view" model="ir.actions.act_window">
            <field name="name">Thực đơn</field>
            <field name="res_model">tigo.menu</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
        <menuitem name="Thực Đơn"
                  id="root_menu"
                  parent="z_base.meal_manegent_menu"
                  sequence="5"
        />
        <menuitem name="Thực Đơn"
                  id="menu_tigo_menu"
                  parent="z_base.root_menu"
                  action="menu_view"
                  sequence="1"/>
    </data>

    <data>
        <record model="ir.ui.view" id="setting_menu_tree">
            <field name="name">Cấu Hình</field>
            <field name="model">tigo.menu.setting</field>
            <field name="arch" type="xml">
                <tree string="Cấu Hình">
                    <field name="id"/>
                    <field name="menu_ids" widget="many2many_tags"/>
                    <field name="day_start"/>
                    <field name="day_end"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="setting_menu_form">
            <field name="name">Cấu Hình</field>
            <field name="model">tigo.menu.setting</field>
            <field name="arch" type="xml">
                <form string="Cấu Hình">
                    <header>
                        <field name="state" widget="statusbar"/>
                        <button string="Tắt Kích Hoạt" class="oe_highlight" type="object" name="action_unactive"
                                attrs="{'invisible': [('state','!=','active')]}"/>
                        <button string="Kích Hoạt" class="oe_highlight" type="object" name="action_active"
                                attrs="{'invisible': [('state','!=','unactive')]}"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="day_start"/>
                            <field name="day_end"/>
                            <field name="menu_ids"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="setting_menu_view" model="ir.actions.act_window">
            <field name="name">Cấu Hình</field>
            <field name="res_model">tigo.menu.setting</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
        <menuitem name="Cấu Hình"
                  id="setting_menu_menu"
                  parent="z_base.root_menu"
                  action="setting_menu_view"
                  sequence="2"/>
    </data>
</odoo>
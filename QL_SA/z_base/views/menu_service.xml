<odoo>
    <data>
        <record model="ir.ui.view" id="dish_service_tree_views">
            <field name="name">Menu</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <tree string="Thực Đơn Dịch Vụ Ngoài">
                    <field name="code_dish"/>
                    <field name="name"/>
                    <field name="type_food"/>
                    <field name="price_total"/>
                    <field name="type_food"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="dish_service_form">
            <field name="name">Menu</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <form string="Món Ăn">
                    <sheet>
                        <field name="img" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <group>
                            <group>
                                <field name="code_dish"/>
                                <field name="type_service" attrs="{'readonly': [('type_service','=','service')]}"/>
                                <field name="type_food"/>
                            </group>
                            <group>
                                <field name="type_room" attrs="{'invisible': [('type_service','!=','service')]}"
                                       widget="radio" options='{"horizontal": 1}'/>
                                <field name="wage" attrs="{'invisible': [('type_food','=','drink')], 'required': [('type_service','=','service')]}"/>
                                <field name="ingredient_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('type_food','=','drink')], 'required': [('type_food','=','eat')]}"/>
                                <field name="price_total" force_save="1"
                                       attrs="{'readonly': [('type_food','!=','drink')]}"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_dish_service_models" model="ir.actions.act_window">
            <field name="name">Thực Đơn Dịch Vụ Ngoài</field>
            <field name="res_model">tigo.dish</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="view_id" ref="dish_service_kanban"/>
            <field name="domain">[("type_service", '=', 'service')]</field>
            <field name="context">{'default_type_service': 'service'}</field>
        </record>
        <menuitem id="list_service"
                  name="Danh Mục"
                  parent="z_base.root_service"
                  sequence="3"/>
        <menuitem id="dish_service"
                  name="Thực Đơn Dịch Vụ Ngoài"
                  parent="z_base.list_service"
                  action="action_dish_service_models"
                  sequence="2"/>
    </data>

    <data>
        <record model="ir.ui.view" id="type_food_tree_views">
            <field name="name">Đồ uống</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <tree string="Đồ uống">
                    <field name="code_dish"/>
                    <field name="name"/>
                    <field name="type_food"/>
                    <field name="price_total"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="type_drink_form">
            <field name="name">Đồ uống</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <form string="Đồ uống">
                    <sheet>
                        <group>
                            <group>
                                <field name="code_dish"/>
                                <field name="name"/>
                                <field name="type_service"/>
                                <field name="type_food"/>
                            </group>
                            <group>
                                <field name="wage"/>
                                <field name="ingredient_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('type_food','=','drink')]}"/>
                                <field name="price_total" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_type_food_drink_models" model="ir.actions.act_window">
            <field name="name">Đồ uống</field>
            <field name="res_model">tigo.dish</field>
            <field name="view_id" ref="dish_service_kanban"/>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[("type_service", '=', 'service'),("type_food", '=', 'drink')]</field>
            <field name="context">{'default_type_food': 'drink', 'default_type_service': 'service'}</field>
        </record>

        <menuitem id="menu_service_menu"
                  name="Thực Đơn"
                  parent="z_base.root_service"
                  sequence="2"/>
        <menuitem id="type_drink"
                  name="Đồ uống"
                  parent="z_base.menu_service_menu"
                  action="action_type_food_drink_models"
                  sequence="1"/>

    </data>

    <data>
        <record model="ir.ui.view" id="type_food_eat_tree_views">
            <field name="name">Đồ ăn</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <tree string="Đồ ăn">
                    <field name="code_dish"/>
                    <field name="name"/>
                    <field name="type_food"/>
                    <field name="price_total"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="type_eat_form">
            <field name="name">Đồ ăn</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <form string="Đồ ăn">
                    <sheet>
                        <group>
                            <group>
                                <field name="code_dish"/>
                                <field name="name"/>
                                <field name="type_service"/>
                                <field name="type_food"/>
                            </group>
                            <group>
                                <field name="wage"/>
                                <field name="ingredient_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('type_food','=','drink')]}"/>
                                <field name="price_total" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_type_food_eat_models" model="ir.actions.act_window">
            <field name="name">Đồ ăn</field>
            <field name="res_model">tigo.dish</field>
            <field name="view_id" ref="dish_service_kanban"/>
            <field name="view_mode">kanban,tree,form</field>
            <field name="domain">[("type_service", '=', 'service'),("type_food", '=', 'eat')]</field>
            <field name="context">{'default_type_food': 'eat', 'default_type_service': 'service'}</field>
        </record>
        <menuitem id="type_eat"
                  name="Đồ ăn"
                  parent="z_base.menu_service_menu"
                  action="action_type_food_eat_models"
                  sequence="1"/>
    </data>

</odoo>


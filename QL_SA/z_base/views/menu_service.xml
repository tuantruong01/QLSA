<odoo>
    <data>
        <record model="ir.ui.view" id="dish_service_tree_views">
            <field name="name">Menu</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <tree string="Món ăn">
                    <field name="code_dish"/>
                    <field name="name"/>
                    <field name="type_food"/>
                    <field name="price_total"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="dish_service_form">
            <field name="name">Menu</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <form string="Menu">
                    <sheet>
                        <group>
                            <group>
                                <field name="code_dish"/>
                                <field name="name"/>
                                <field name="type_service"/>
                                <field name="type_food"/>
                            </group>
                            <group>
                                <field name="wage"/>
                                <field name="ingredient_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('type_food','=','drink')]}"/>
                                <field name="price_total" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_dish_service_models" model="ir.actions.act_window">
            <field name="name">Menu</field>
            <field name="res_model">tigo.dish</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[("type_service", '=', 'service')]</field>
        </record>
        <menuitem id="list_service"
                  name="Danh Mục"
                  parent="z_base.root_service"
                  sequence="3"/>
        <menuitem id="dish_service"
                  name="Thực Đơn"
                  parent="z_base.list_service"
                  action="action_dish_service_models"
                  sequence="2"/>
    </data>

    <data>
        <record model="ir.ui.view" id="type_food_tree_views">
            <field name="name">Đồ uống</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <tree string="Đồ uống">
                    <field name="code_dish"/>
                    <field name="name"/>
                    <field name="type_food"/>
                    <field name="price_total"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="type_drink_form">
            <field name="name">Đồ uống</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <form string="Đồ uống">
                    <sheet>
                        <group>
                            <group>
                                <field name="code_dish"/>
                                <field name="name"/>
                                <field name="type_service"/>
                                <field name="type_food"/>
                            </group>
                            <group>
                                <field name="wage"/>
                                <field name="ingredient_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('type_food','=','drink')]}"/>
                                <field name="price_total" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_type_food_drink_models" model="ir.actions.act_window">
            <field name="name">Đồ uống</field>
            <field name="res_model">tigo.dish</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[("type_service", '=', 'service'),("type_food", '=', 'drink')]</field>
        </record>

        <menuitem id="menu_service_menu"
                  name="Thực Đơn"
                  parent="z_base.root_service"
                  sequence="2"/>
        <menuitem id="type_drink"
                  name="Đồ uống"
                  parent="z_base.menu_service_menu"
                  action="action_type_food_drink_models"
                  sequence="1"/>

    </data>

    <data>
        <record model="ir.ui.view" id="type_food_eat_tree_views">
            <field name="name">Đồ ăn</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <tree string="Đồ ăn">
                    <field name="code_dish"/>
                    <field name="name"/>
                    <field name="type_food"/>
                    <field name="price_total"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="type_eat_form">
            <field name="name">Đồ ăn</field>
            <field name="model">tigo.dish</field>
            <field name="arch" type="xml">
                <form string="Đồ ăn">
                    <sheet>
                        <group>
                            <group>
                                <field name="code_dish"/>
                                <field name="name"/>
                                <field name="type_service"/>
                                <field name="type_food"/>
                            </group>
                            <group>
                                <field name="wage"/>
                                <field name="ingredient_ids" widget="many2many_tags"
                                       attrs="{'invisible': [('type_food','=','drink')]}"/>
                                <field name="price_total" force_save="1"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_type_food_eat_models" model="ir.actions.act_window">
            <field name="name">Đồ ăn</field>
            <field name="res_model">tigo.dish</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[("type_service", '=', 'service'),("type_food", '=', 'eat')]</field>
        </record>

        <menuitem id="type_eat"
                  name="Đồ ăn"
                  parent="z_base.menu_service_menu"
                  action="action_type_food_eat_models"
                  sequence="1"/>
    </data>

</odoo>


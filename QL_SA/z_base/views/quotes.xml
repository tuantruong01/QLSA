<odoo>
    <data>
        <record model="ir.ui.view" id="quotes_service_tree">
            <field name="name">Báo Giá</field>
            <field name="model">tigo.service</field>
            <field name="arch" type="xml">
                <tree string="Báo giá">
                    <field name="name"/>
                    <field name="name_id"/>
                    <field name="type"/>
                    <field name="room_id"/>
                    <field name="start_day"/>
                    <field name="end_day"/>
                </tree>
            </field>
        </record>
        <record model="ir.ui.view" id="service_form">
            <field name="name">Báo Giá</field>
            <field name="model">tigo.service</field>
            <field name="arch" type="xml">
                <form string="Báo Giá">
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="name_id"/>
                                <field name="type"/>
                                <field name="room_id"/>
                                <field name="dish_ids" widget="many2many_tags"/>
                            </group>
                            <group>
                                <field name="start_day"/>
                                <field name="end_day"/>
                                <field name="time_use" attrs="{'invisible': [('type','=','eat')]}"/>
                                <field name="price"/>
                                <field name="deposit"/>
                                <field name="total"/>
                                <field name="note"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="quotes_service_view" model="ir.actions.act_window">
            <field name="name">Báo Giá</field>
            <field name="res_model">tigo.service</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
        </record>
        <menuitem name="Báo Giá"
                  id="quotes_service"
                  parent="z_base.service_menu"
                  action="service_view"
                  sequence="1"/>
    </data>
</odoo>